{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6", "DOM"],
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declarationDir": "./dist/types",
  },
  "files": ["./index.ts"],
  "include": [
    "./src/**/*",
    ".eslintrc.js",
    "jest.config.mjs",
  ],
  "exclude": [
    "src/**/*.test.ts",
  ]
}
